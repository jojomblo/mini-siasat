<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ManagePeriodFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manajemen Periode Akademik"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_marginBottom="24dp"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Periode Registrasi Mata Kuliah"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchLecture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Periode Perkuliahan (Absensi)"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"/>

</LinearLayout>